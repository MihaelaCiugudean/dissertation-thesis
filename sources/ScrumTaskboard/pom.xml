	<properties>

		<!-- Generic properties -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<!-- Web -->
		<jsp.version>2.2</jsp.version>
		<jstl.version>1.2</jstl.version>
		<servlet.version>2.5</servlet.version>


		<!-- Spring -->
		<spring-framework.version>3.2.3.RELEASE</spring-framework.version>
		<spring-aspects.version>3.1.2.RELEASE</spring-aspects.version>
		<spring-orm.version>1.6.8</spring-orm.version>
		<commons-pool.version>1.4</commons-pool.version>
		<spring-data-jpa.version>1.3.2.RELEASE</spring-data-jpa.version>

		<!-- Hibernate / JPA -->
		<hibernate.version>4.2.1.Final</hibernate.version>
		<hibernate-validator.version>5.0.1.Final</hibernate-validator.version>
		<hibernate-entitymanager.version>3.4.0.GA</hibernate-entitymanager.version>
		
		<!--  MySQL -->
		<mysql-connector-java.version>5.1.20</mysql-connector-java.version>
		
		<!-- Logging -->
		<log4j.version>1.2.14</log4j.version>
		<slf4j.version>1.6.1</slf4j.version>

		<!-- Test -->
		<junit.version>4.11</junit.version>
		<mockito.version>1.9.5</mockito.version>

		<!--  AspectJ -->
		<aspectjrt.version>1.7.4</aspectjrt.version>
		
		<!--  Cglib -->
		<cglib.version>3.0</cglib.version>
		
		<!-- JFreeChart  -->
		<jfreechart.version>1.0.13</jfreechart.version>
		
		<!-- Maven  -->
		<maven-compiler-plugin.version>2.3.2</maven-compiler-plugin.version>
		<sql-maven-plugin.version>1.5</sql-maven-plugin.version>

	</properties>

	<profiles>
		<profile>
			<id>profile</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-compiler-plugin</artifactId>
						<configuration>
                            <!--Extract java version as property-->
							<source>1.7</source>
							<target>1.7</target>
						</configuration>
						<version>${maven-compiler-plugin.version}</version>
					</plugin>


		 			<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>sql-maven-plugin</artifactId>
						<version>${sql-maven-plugin.version}</version>
						<!--  JDBC Driver -->
						<dependencies>
							<dependency>
								<groupId>mysql</groupId>
								<artifactId>mysql-connector-java</artifactId>
								<version>${mysql-connector-java.version}</version>
							</dependency>
						</dependencies>

